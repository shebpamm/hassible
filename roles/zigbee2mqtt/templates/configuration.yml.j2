# Home Assistant integration (MQTT discovery)
homeassistant: {{ 'hass' in role_names | to_json }} 

# allow new devices to join
permit_join: false 

# MQTT settings
mqtt:
  base_topic: zigbee2mqtt
  server: 'mqtt://mosquitto'
  user: 'mqtt_user'
  password: {{ mosquitto_config.users.mqtt_user.password }}

# Serial settings
serial:
  # Location of CC2531 USB sniffer
  port: /dev/zigbee

frontend: {{ zigbee2mqtt_config.frontend_enabled | to_json }}

advanced:
  log_level: info
  log_directory: /app/log
  log_file: zigbee2mqtt_%TIMESTAMP%.log
  log_rotation: true
